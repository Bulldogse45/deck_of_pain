<h3 class="text-center">Deck Options</h3>
<%= form_for @deck, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <div class="row">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <%= f.label "Max Card Value", class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.select(:max_face, DecksController::FACES, class: "form-control") %>
      </div>
    </div>
  </div>
  <div class="row">
  <%= f.submit "Save", class: "center-block" %>
  </div>
<% end %>
