<div class="container">
  <div class="col-lg-12">
      <h1 class="page-header"><%=@deck.name%></h1>
  </div>
  <% @deck.cards.shuffle.each do |c| %>
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
      <%= link_to c do %>
        <img class="img-responsive" src="http://placehold.it/400x200" alt="">
      <% end %>
    </div>
  <% end %>
</div>
<%= link_to "Reset", deck_reset_path, :class => "btn btn-primary" %>
