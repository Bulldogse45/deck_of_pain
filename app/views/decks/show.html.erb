<div class="container">
  <div class="col-lg-12">
      <h1 class="page-header"><%=@deck.name%></h1>
  </div>
  <div class="col-lg-1 col-md-2 col-xs-4 thumb">
    <%= link_to draw_card_path(@deck.id) do %>
      <%= image_tag("back_of_card", class:'auto-size') %>
    <% end %>
  </div>
  <% @deck.cards.each do |c| %>
    <% if c.turned %>
      <div class="col-lg-1 col-md-2 col-xs-4 thumb">
        <%= link_to c do %>
          <%= image_tag(c.image_name, class:'auto-size') %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
<%= link_to "Reset", deck_reset_path, :class => "btn btn-primary" %>
