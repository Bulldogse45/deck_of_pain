<div class="container-fluid">
  <%= link_to "New Deck", new_deck_path, class: "btn btn-primary" %>
  <h3 class="text-center">Random Card</h3>
  <% @decks.each do |d| %>
    <div class="col-lg-3">
      <%= link_to d.name, d %>
    </div>
    <div class="col-lg-3">
      <%= link_to "Edit #{d.name}", edit_deck_path(d) %>
    </div>
    <div class="col-lg-3">
    </div>
    <div class="col-lg-3">
      <%= link_to "Delete #{d.name}", deck_path(d), method: :delete %>
    </div>
  <% end %>
</div>
